# Get the current branch name
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Only check tests if pushing to main
if [ "$current_branch" = "main" ]; then
    echo "ğŸš€ Pushing to main. Verifying tests..."
    if ! bash scripts/check-tests.sh; then
        echo "âŒ Tests verification failed. Push to main aborted."
        exit 1
    fi
fi

exit 0
