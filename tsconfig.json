{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es2015",
		"jsx": "react",
		"allowJs": true,
		"baseUrl": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@main/*": [
				"src/main/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	]
}